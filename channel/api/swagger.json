{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "Channel service"
  },
  "host": "localhost:8804",
  "basePath": "/api/",
  "tags": [
    {
      "name": "channel"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/v1/channel": {
      "post": {
        "tags": [
          "channel"
        ],
        "summary": "Добавить канал",
        "operationId": "addChannel",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "запрос на добавление канала",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AddChannelRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Channel successfully created",
            "schema": {
              "$ref": "#/definitions/SuccessResponse"
            }
          },
          "400": {
            "description": "Channel create validate error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "403": {
            "description": "Forrbidden",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    },
    "/v1/channel/{channel_id}": {
      "delete": {
        "tags": [
          "channel"
        ],
        "summary": "Удалить канал",
        "operationId": "deleteChannel",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "channel_id",
            "description": "id канала",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Channel successfully deleted",
            "schema": {
              "$ref": "#/definitions/SuccessResponse"
            }
          },
          "403": {
            "description": "Forrbidden",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    },
    "/v1/channel/join/{channel_id}": {
      "post": {
        "tags": [
          "channel"
        ],
        "summary": "Присоединиться к каналу",
        "operationId": "joinChannel",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "channel_id",
            "description": "id канала",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Channel successfully joined",
            "schema": {
              "$ref": "#/definitions/SuccessResponse"
            }
          },
          "403": {
            "description": "Forrbidden",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    },
    "/v1/channel/leave/{channel_id}": {
      "post": {
        "tags": [
          "channel"
        ],
        "summary": "Покинуть канал",
        "operationId": "leaveChannel",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "channel_id",
            "description": "id канала",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Channel successfully leaved",
            "schema": {
              "$ref": "#/definitions/SuccessResponse"
            }
          },
          "403": {
            "description": "Forrbidden",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ErrorMessage"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ErrorMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "SuccessResponse": {
      "type": "object",
      "properties": {
        "success": {
          "type": "boolean",
          "example": true
        }
      }
    },
    "AddChannelRequest": {
      "required": ["name"],
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "channel name"
        }
      }
    }
  }
}